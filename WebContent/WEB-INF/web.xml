<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" 
	xmlns="http://java.sun.com/xml/ns/j2ee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>servlet.LoginServlet</servlet-class>
	</servlet>	
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/loginServlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>logout</servlet-name>
		<servlet-class>servlet.LogoutServlet</servlet-class>
	</servlet>	
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>serchBook</servlet-name>
		<servlet-class>servlet.SerchBookServlet</servlet-class>
	</servlet>	
	<servlet-mapping>
		<servlet-name>serchBook</servlet-name>
		<url-pattern>/serchBook</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>findAllBook</servlet-name>
		<servlet-class>servlet.FindAllBookServlet</servlet-class>
	</servlet>	
	<servlet-mapping>
		<servlet-name>findAllBook</servlet-name>
		<url-pattern>/findAllBook</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>showBook</servlet-name>
		<servlet-class>servlet.ShowBookServlet</servlet-class>
	</servlet>	
	<servlet-mapping>
		<servlet-name>showBook</servlet-name>
		<url-pattern>/showBook</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>showCart</servlet-name>
		<servlet-class>servlet.ShowCartServlet</servlet-class>
	</servlet>	
	<servlet-mapping>
		<servlet-name>showCart</servlet-name>
		<url-pattern>/showCart</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>addCart</servlet-name>
		<servlet-class>servlet.AddCartServlet</servlet-class>
	</servlet>	
	<servlet-mapping>
		<servlet-name>addCart</servlet-name>
		<url-pattern>/addCart</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>addOrder</servlet-name>
		<servlet-class>servlet.AddOrderServlet</servlet-class>
	</servlet>	
	<servlet-mapping>
		<servlet-name>addOrder</servlet-name>
		<url-pattern>/addOrder</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>delCart</servlet-name>
		<servlet-class>servlet.DelCartServlet</servlet-class>
	</servlet>	
	<servlet-mapping>
		<servlet-name>delCart</servlet-name>
		<url-pattern>/delCart</url-pattern>
	</servlet-mapping>
	
 
	
</web-app>
